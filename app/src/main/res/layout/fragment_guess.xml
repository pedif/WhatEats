<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".GuessFragment">
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" android:id="@+id/radioGroup">
            <RadioButton
                    android:text="@string/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radio_male" android:layout_weight="1"/>
            <RadioButton
                    android:text="@string/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radio_female" android:layout_weight="1"/>
        </RadioGroup>
        <TextView
                android:padding="16dp"
                android:text="@string/text_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_msg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/image_button_guess"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/guess"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
