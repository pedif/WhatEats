<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <fragment
            android:id="@+id/fragment" android:layout_width="match_parent" android:layout_height="match_parent"
            android:name="com.techspark.whateats.GuessFragment"/>
    <com.google.android.gms.ads.AdView android:layout_width="wrap_content"
                                       android:id="@+id/ad_view"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="bottom|center_horizontal"
                                       app:adSize="SMART_BANNER"
                                       app:adUnitId="@string/ad_unit_id"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>